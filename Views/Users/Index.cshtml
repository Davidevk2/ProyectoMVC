@{
    ViewData["title"] = "Index";
}

<h1>Index de los usuarios </h1>
<a  class="btn btn-sm btn-success" asp-controller="Users" asp-action="Create">Create New User</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Names</th>
            <th>LastName</th>
            <th>Email</th>
            <th>BirthDate</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    @foreach(var item in Model){
        <tr>
            <td>@item.Id</td>
            <td>@item.Names</td>
            <td>@item.LastNames</td>
            <td>@item.Email</td>
            <td>@item.BirthDate</td>
            <td>@item.Address</td>
            <td>@item.Phone</td>
            <td><a class="btn btn-sm btn-primary" asp-action="Details" asp-controller="Users" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-sm btn-warning" asp-action="Details" asp-controller="Users" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-controller="Users" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        
    }
</table>