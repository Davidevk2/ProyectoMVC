@model User
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit User</h1>
<a asp-controller="Users" asp-action="Index" >Regresar</a>
<form asp-action="Update" method="post">
    <div asp-validation-summary="All"></div> @* Mostrar errores  *@ 
    <div class="form-group">
        <label for="">Names:</label>
        <input asp-for="Names" class="form-control">
        @* <input name="Names" class="form-control" value="@Model.Names" id="Names"> *@
    </div>

     <div class="form-group">
        <label for="">LastName:</label>
        <input asp-for="LastNames" class="form-control">
    </div>

    <div class="form-group">
        <label for="">Email:</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <label for="">BirthDate:</label>
        <input asp-for="BirthDate" class="form-control">
    </div>

     <div class="form-group">
        <label for="">Address:</label>
        <input asp-for="Address" class="form-control">
    </div>

    <div class="form-group">
        <label for="">Phone:</label>
        <input asp-for="Phone" class="form-control">
    </div>

    <button class="btn btn-success">Send</button>
</form>